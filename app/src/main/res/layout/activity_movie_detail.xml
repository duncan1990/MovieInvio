<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.MovieDetailActivity">

    <ImageView
        android:id="@+id/imageViewMovieDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="246dp" />

    <TextView
        android:id="@+id/textViewMGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="@dimen/movie_detail_textM_Genre_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMovieDetail" />

    <TextView
        android:id="@+id/textViewMPlot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="@dimen/movie_detail_textM_desc_size"
        app:layout_constraintEnd_toEndOf="@+id/textViewMGenre"
        app:layout_constraintStart_toStartOf="@+id/textViewMGenre"
        app:layout_constraintTop_toBottomOf="@+id/textViewMGenre" />

    <TextView
        android:id="@+id/textViewMYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/imageViewMovieDetail" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="249dp" />

    <TextView
        android:id="@+id/textViewMCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewMYear"
        app:layout_constraintStart_toStartOf="@+id/textViewMYear"
        app:layout_constraintTop_toBottomOf="@+id/textViewMYear" />

    <TextView
        android:id="@+id/textViewMRuntime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewMCountry"
        app:layout_constraintStart_toStartOf="@+id/textViewMCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewMCountry" />

    <TextView
        android:id="@+id/textViewMImdb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewMRuntime"
        app:layout_constraintStart_toStartOf="@+id/textViewMRuntime"
        app:layout_constraintTop_toBottomOf="@+id/textViewMRuntime" />

    <TextView
        android:id="@+id/textViewMRotten"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewMImdb"
        app:layout_constraintStart_toStartOf="@+id/textViewMImdb"
        app:layout_constraintTop_toBottomOf="@+id/textViewMImdb" />

</androidx.constraintlayout.widget.ConstraintLayout>